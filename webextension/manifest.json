{
    "manifest_version": 2,
    "name": "redditx",
    "version": "0.0.1",
    "description": "An unofficial browser add-on for using Reddit",
    "browser_action": {
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.reddit.com/*"
            ],
            "js": ["browserbundle.js"]
        }
    ],
    "permissions": [
        "https://oauth.reddit.com/",
        "storage",
        "webRequest",
        "notifications"
    ]
}